{% extends "html/layouts/default.twig" %}
{% block content %}
<section id="addForm" class="d-flex justify-content-center">
    <div class="card">
        <div class="card-header">
            <h1>Shorten a URL</h1>
        </div>
        <div class="card-body">
            <form method="post">
                <fieldset>
                    {% include 'html/urls/partials/fields.twig' %}
                    <button type="submit" class="btn btn-primary">Save</button>
                </fieldset>
            </form>
        </div>
    </div>
</section>
{% endblock %}
