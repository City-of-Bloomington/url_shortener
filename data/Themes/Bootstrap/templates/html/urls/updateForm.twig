{% extends "html/layouts/default.twig" %}
{% block content %}
<section id="updateForm" class="d-flex justify-content-center">
    <div class="card">
        <div class="card-body">
            <form method="post">
                <fieldset>
                    <legend><h1>Update a Short URL</h1></legend>
                    <input type="hidden" name="id" value="{{ id }}" />
                    {% include 'html/urls/partials/fields.twig' %}
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="{{ uri('urls.view', {'id':id}) }}" class="btn btn-secondary">Cancel</a>
                </fieldset>
            </form>
        </div>
    </div>
</section>
{% endblock %}
