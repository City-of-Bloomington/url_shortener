{% extends "html/layouts/default.twig" %}
{% import  "html/macros/pagination.twig" as pagination %}

{% block content %}
<section>
    <header>
        <h1>Find URLs</h1>
    </header>
    <form method="get">
        <fieldset>
            <label for="query">Query</label>
            <input name="query" id="query" value="{{ query }}" placeholder="Search original or code"/>
            <button type="submit" class="search">Search</button>
        </fieldset>
        <details {% if code or original or username %}open="true"{% endif %}>
            <summary>Advanced Search</summary>
            <fieldset>
                <div>
                    <label  for="code">Code</label>
                    <input name="code" id="code" value="{{ code }}"
                                size="{{ CODE_LENGTH }}"
                           maxlength="{{ CODE_LENGTH }}" />
                </div>
                <div>
                    <label for="original">Original</label>
                    <input name="original" id="original" value="{{ original }}" />
                </div>
                <div>
                    <label   for="username">Username</label>
                    <select name="username" id="username"><option value=""></option>
                    {% for u in usernames %}
                        <option {% if u==username %}selected="selected"{% endif %}>{{ u }}</option>
                    {% endfor %}
                    </select>
                </div>
                <button type="submit" class="search">Search</button>
            </fieldset>
        </details>
        <fieldset>
            <div>
                <label   for="sort">Sort</label>
                <select name="sort" id="sort">
                {% for s in sorts %}
                    <option value="{{ s }}" {% if s==order %}selected="true"{% endif %}>
                    {{ _('sort ' ~ s) }}
                    </option>
                {% endfor %}
                </select>
            </div>
        </fieldset>
    </form>

    {% if urls %}
    {% set sorturl      = current_url() %}
    {% set current_sort = sorturl.__get('sort')|split(' ') %}
    <table>
        <thead>
            <tr>{% for f in ['code', 'short', 'original', 'created', 'updated', 'username', 'hits'] %}
                    {{ sorturl.__set('sort', f) }}
                    {% if current_sort[0]==f and current_sort[1] is not defined %}{{ sorturl.__set('sort', f ~ ' desc') }}{% endif %}
                    <th><a href="{{ sorturl }}">{{ f }}</a></th>
                {% endfor %}
            </tr>
        </thead>
        <tbody>
        {% for url in urls %}{% set uri = uri('urls.view', {'id':url.id}) %}
        <tr><td><a href="{{ uri('urls.view', {'id':url.id}) }}">{{ url.code }}</a></td>
            <td><a href="{{ url('urls.redirect', {'code':url.code}) }}">Short Url</a></td>
            <td><a href="{{ url.original }}">Original Url</a></td>
            <td>{{ url.created.format('n/d/Y') }}</td>
            <td>{{ url.updated.format('n/d/Y') }}</td>
            <td>{{ url.username }}</td>
            <td>{{ url.hits }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No URLs found.</p>
    {% endif %}

    {# Pagination #}
    {% if total > itemsPerPage %}
        {{ pagination.pageLinks(total, itemsPerPage, currentPage) }}
    {% endif %}
</section>
{% endblock %}
