{% extends "html/layouts/default.twig" %}
{% block content %}
<section id="preview">
    <header>
        <h2>Short Url Preview</h2>
    </header>
    <table>
        <tr><th>Short Url</th>      <td>{{ url('urls.redirect', {'code':url.code}) }}</td></tr>
        <tr><th>Destination Url</th><td><a href="{{ url.original }}">{{ url.original }}</a></td></tr>
    </table>

    <img src="{{ url('urls.qrcode', {'code':url.code} )}}" />

</section>
{% endblock %}
